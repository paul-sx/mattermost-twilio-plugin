{
   "id": "sx.paul.mattermost.twilio",
   "homepage_url": "https://github.com/paul-sx/mattermost-twilio-plugin",
   "name": "Twilio Mattermost Server Plugin",
   "description": "A plugin to bridge mattermost with Twilio conversations.",
   "version": "0.7.3",
   "min_server_version": "7.0.0",
   "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "linux-arm64": "server/dist/plugin-linux-arm64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "darwin-arm64": "server/dist/plugin-darwin-arm64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        }
    },
   "settings_schema": {
      "header": "Twilio Plugin Settings",
      "footer": "These settings are used to configure the Twilio plugin.",
      "settings": [
         {
            "key": "TeamName",
            "display_name": "Team to integrate with",
            "type": "text",
            "help_text": "The team that will have the Twilio integration.",
            "placeholder": "my-team",
            "default": ""
         },
         {
            "key": "AutoAddUsers",
            "display_name": "Users to add to conversations",
            "type": "text",
            "help_text": "Comma-separated list of usernames to add to new conversations.",
            "placeholder": "bob,ted",
            "default": ""
         },
         {
            "key": "TwilioSid",
            "display_name": "Twilio SID",
            "type": "text",
            "help_text": "Twilio SID to use to send messages.",
            "placeholder": "ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
            "default": ""
         },
         {
            "key": "TwilioToken",
            "display_name": "Twilio Token",
            "type": "text",
            "help_text": "Token to use to authenticate with Twilio.",
            "placeholder": "your_auth_token",
            "default": ""
         }
      ]
   }
}
